            />

    <TextView
            android:id="@+id/tv_message_item2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            tools:text="初始数据"
            android:padding="5dp"
            android:layout_toRightOf="@id/iv_item2"
            />

</RelativeLayout>